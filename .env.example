# ============================================================
# PHOENIX AI - Environment Variables
# ============================================================

# Telegram Bot
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_ALLOWED_USERS=123456789  # Comma-separated user IDs

# Claude AI (Anthropic)
ANTHROPIC_API_KEY=your_anthropic_key_here

# GitHub Integration
GITHUB_TOKEN=your_github_token_here
GITHUB_DEFAULT_OWNER=your_github_username

# Railway Integration
RAILWAY_API_TOKEN=your_railway_token_here

# Database (Railway provides this automatically)
DATABASE_URL=postgresql://user:pass@host:port/db

# Webhook (Railway will set this)
WEBHOOK_URL=https://your-app.railway.app/webhook

# Optional: OpenRouter as fallback
OPENROUTER_API_KEY=your_openrouter_key_here
